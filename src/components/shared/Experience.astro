---
import ExperienceHeader from "./ExperienceHeader.astro";
import ListItem from "./ListItem.astro";

interface Props {
  name: string;
  position: string;
  url?: string;
  startDate: Date;
  endDate?: Date;
  summary: string;
  highlights: Array<string>;
  description?: string;
  highlightsHeader: string;
}

const props = Astro.props;
---

<ListItem>
  <div class="w-full">
    <ExperienceHeader {...props} />
  </div>
  <p class="text-gray-500 text-sm">{props.position}</p>
  <div class="flex flex-col gap-1 pt-2">
    <p class="text-gray-500 text-xs">{props.summary}</p>
    {
      props.highlights.length ? (
        <>
          <p class="text-xs font-semibold pb-1 pt-1">
            {props.highlightsHeader}
          </p>
          <ul class="list-disc pl-6">
            {props.highlights.map((highlight) => (
              <li class="text-gray-500 text-xs">{highlight}</li>
            ))}
          </ul>
        </>
      ) : null
    }
  </div>
</ListItem>
