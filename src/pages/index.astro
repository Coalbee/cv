---
import { getEntry } from "astro:content";
import Awards from "../components/sections/Awards.astro";
import Certificates from "../components/sections/Certificates.astro";
import Education from "../components/sections/Education.astro";
import Interests from "../components/sections/Interests.astro";
import Languages from "../components/sections/Languages.astro";
import Person from "../components/sections/Person.astro";
import Projects from "../components/sections/Projects.astro";
import Publications from "../components/sections/Publications.astro";
import References from "../components/sections/References.astro";
import Skills from "../components/sections/Skills.astro";
import Summary from "../components/sections/Summary.astro";
import Volunteer from "../components/sections/Volunteer.astro";
import Work from "../components/sections/Work.astro";
import Dialog from "../components/shared/Dialog.astro";
import Layout from "../layouts/Layout.astro";

const entry = await getEntry("resume", "en/resume");
if (!entry) throw new Error("Entry not found");
const data = entry.data;
---

<Layout locale="en" basics={data.basics}>
  <Person basics={data.basics} />
  <Summary header="Summary" summary={data.basics.summary} />
  <Work
    header="Work Experience"
    work={data.work}
    highlightHeader="Highlights"
  />
  <Volunteer
    header="Volunteering"
    highlightsHeader="Highlights"
    volunteer={data.volunteer}
  />
  <Education
    header="Education"
    coursesHeader="Courses"
    education={data.education}
  />
  <Awards header="Awards" awards={data.awards} />
  <Certificates header="Certificates" certificates={data.certificates} />
  <Publications header="Publications" publications={data.publications} />
  <Skills header="Skills" skills={data.skills} />
  <Languages header="Languages" languages={data.languages} />
  <Interests header="Interests" interests={data.interests} />
  <References header="References" references={data.references} />
  <Projects
    header="Projects"
    projects={data.projects}
    highlightsHeader="Highlights"
  />
  <Dialog
    basics={data.basics}
    languagesHeader="Languages"
    dialogHeader="Quick actions"
    linksHeader="Links"
    print="Print"
  />
</Layout>
