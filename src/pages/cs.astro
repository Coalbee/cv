---
import { getDataEntryById } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Interests from "../components/sections/Interests.astro";
import Languages from "../components/sections/Languages.astro";
import Person from "../components/sections/Person.astro";
import Projects from "../components/sections/Projects.astro";
import Skills from "../components/sections/Skills.astro";
import Summary from "../components/sections/Summary.astro";
import Work from "../components/sections/Work.astro";
import Dialog from "../components/shared/Dialog.astro";
import Awards from "../components/sections/Awards.astro";
import Certificates from "../components/sections/Certificates.astro";
import Publications from "../components/sections/Publications.astro";
import References from "../components/sections/References.astro";
import Education from "../components/sections/Education.astro";
import Volunteer from "../components/sections/Volunteer.astro";

const entry = await getDataEntryById("resume", "cs/resume");

const data = entry.data;
---

<Layout locale="cs" basics={data.basics}>
  <Person basics={data.basics} />
  <Summary header="Shrnutí" summary={data.basics.summary} />
  <Work
    header="Pracovní zkušenosti"
    work={data.work}
    highlightHeader="Nejdůležitější body"
  />
  <Volunteer
    header="Volunteering"
    highlightsHeader="Nejdůležitější body"
    volunteer={data.volunteer}
  />
  <Education
    header="Vzdělání"
    coursesHeader="Kurzy"
    education={data.education}
  />
  <Awards header="Ocenění" awards={data.awards} />
  <Certificates header="Certifikáty" certificates={data.certificates} />
  <Publications header="Publikace" publications={data.publications} />
  <Skills header="Schopnosti" skills={data.skills} />
  <Languages header="Jazyky" languages={data.languages} />
  <Interests header="Zájmy" interests={data.interests} />
  <References header="Reference" references={data.references} />
  <Projects
    header="Projekty"
    projects={data.projects}
    highlightsHeader="Nejdůležitější body"
  />
  <Dialog
    basics={data.basics}
    languagesHeader="Jazyky"
    dialogHeader="Rychlé akce"
    linksHeader="Odkazy"
    print="Tisknout"
  />
</Layout>
