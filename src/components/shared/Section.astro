---
interface Props {
  header: string;
  id?: string;
}

const { header, id } = Astro.props;
---

<section>
  {
    id ? (
      <a href={`#${id}`} class="hover:underline decoration-2">
        <h2 class="text-xl font-semibold">{header}</h2>
      </a>
    ) : (
      <h2 class="text-xl font-semibold">{header}</h2>
    )
  }

  <div class="flex flex-col pt-1">
    <slot />
  </div>
</section>
